{
  "name": "the-rang",
  "version": "0.4.0",
  "description": "a simple wrapper for Koa",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "start": "tsc -w",
    "compile": "tsc",
    "prettier": "prettier --write 'src/**/*.ts'",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test:server": "NODE_ENV=test node test/index.js",
    "test": "NODE_ENV=test jest --coverage --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn prettier",
      "yarn lint",
      "yarn compile",
      "yarn test",
      "git add"
    ]
  },
  "author": "zenxds",
  "repository": {
    "type": "git",
    "url": "https://github.com/zenxds/the-rang.git"
  },
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "async-validator": "^1.8.5",
    "delegates": "^1.0.0",
    "extend2": "^1.0.0",
    "html-minifier": "^3.5.19",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-csrf": "^3.0.6",
    "koa-json": "^2.0.2",
    "koa-router": "^7.4.0",
    "koa-session": "^5.8.2",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.4",
    "log4js": "^4.0.2",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "multer": "^1.3.1",
    "mysql2": "^1.6.5",
    "nodemailer": "^5.1.1",
    "nunjucks": "^3.1.3",
    "rotating-file-stream": "^1.3.6",
    "sequelize": "^5.1.0"
  },
  "devDependencies": {
    "@types/koa": "^2.0.48",
    "@types/node": "^11.11.3",
    "config": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "the-rang-ding-crop": "^0.1.0",
    "tslint": "^5.14.0",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/config/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ]
  }
}
